extends ./layout.jade

block additional_styles
  link(rel="stylesheet" href="assets/examples/css/pages/login-v2.css")

block additional_scripts
  script(src="global/vendor/jquery-placeholder/jquery.placeholder.js")
  script(src="global/js/Plugin/jquery-placeholder.js")
  script(src="global/js/Plugin/material.js")
  script(src='js/vendor.js', defer)
  script(src='js/login.js', defer)

block content
  main
    div(style={ 'animation-duration': '800ms', opacity: '1'}).animsition.page-login-v2.layout-full.page-dark
      div.page(data-animsition-in='fade-in', data-animsition-out='fade-out')
        div.page-content
          div.page-brand-info
            div.brand
              img.brand-img(src='assets/images/logo.svg', height="65" alt='...')
              h2.brand-text.font-size-40 Genermasa
            p.font-size-20    
              | Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
              | tempor incididunt ut labore et dolore magna aliqua.
          div.page-login-main(style={position: 'fixed !important'})
            div.brand.hidden-md-up
              img.brand-img(src='assets/images/logo.svg', height="55" alt='...')
              h3.brand-text.font-size-30 Genermasa
            h3.font-size-24 Bienvenido de vuelta
            p Ingrese sus credenciales para continuar.
            div.alert.alert-danger(v-if='message') #[p {{ message }}]
            div(style={'width': '375px'})
              div.form-group.form-material.floating(data-plugin='formMaterial')
                input#inputEmail.form-control.empty(type='text', name='username', v-model='form.username')
                label.floating-label(for='inputEmail') No. empleado
              div.form-group.form-material.floating(data-plugin='formMaterial')
                input#inputPassword.form-control.empty(type='password', name='password', v-model='form.password')
                label.floating-label(for='inputPassword') Password
              div.form-group.clearfix
                div.checkbox-custom.checkbox-inline.checkbox-primary.float-left
                  input#remember(type='checkbox', name='remember', v-model='form.remember')
                  label(for='inputCheckbox') Recordarme
              button.btn.btn-primary.btn-block(v-bind:disabled='!valid(form)' v-on:click='login(form)') Iniciar sesión
            footer.page-copyright
              p Asora
              p © 2017. All RIGHT RESERVED.
              div.social
                a.btn.btn-icon.btn-round.social-twitter.mx-5(href='javascript:void(0)')
                  i.icon.bd-twitter(aria-hidden='true')
                a.btn.btn-icon.btn-round.social-facebook.mx-5(href='javascript:void(0)')
                  i.icon.bd-facebook(aria-hidden='true')
                a.btn.btn-icon.btn-round.social-google-plus.mx-5(href='javascript:void(0)')
                  i.icon.bd-google-plus(aria-hidden='true')
